{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors",
                "./out/test"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/**/*"
            ],
            "preLaunchTask": "compile"
        }
    ]
}
